<% if (errorMessage.length > 0) { %>
	<div class="alert alert-danger">
		<% errorMessage.forEach(function(error) { %>
			<%= error %><br>
		<% }); %>
	</div>
<% } %>

<div class="tab-pane fade show active" id="datiPersonali">
	<h3>Dati Personali</h3>

	<div class="d-flex align-items-center mb-3">
		<img src="https://via.placeholder.com/100" class="rounded-circle me-3" alt="Placeholder foto profilo">
		<div>
			<h4><%= user.nome %> <%= user.cognome %></h4>
			<p class="text-muted"><%= user.email %></p>
		</div>
	</div>

	<table class="table">
		<tbody>
		<tr>
			<th>Data di iscrizione:</th>
			<td><%= user.insert_time.toLocaleDateString() %></td>
		</tr>
		<tr>
			<th>Indirizzo:</th>
			<td>
				<% if (user.indirizzo) { %>
					<%= user.indirizzo.indirizzo %>, <%= user.indirizzo.city %>, <%= user.indirizzo.provincia %> <%= user.indirizzo.cap %>
				<% } else { %>
					<p>Nessun indirizzo specificato</p>
				<% } %>
			</td>
		</tr>
		</tbody>
	</table>

	<a href="/profile/edit" class="btn btn-primary">Modifica profilo</a>
</div>