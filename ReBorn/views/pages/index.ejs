<% if (errorMessage.length > 0) { %>
    <div class="alert alert-danger">
        <% errorMessage.forEach(function(error) { %>
            <%= error %><br>
        <% }); %>
    </div>
<% } %>

<section class="carousel">
    <div class="page">
        <div id="carousel" class="carousel">
            <% images.forEach(function(image, index) { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                    <img class="slider" src="/img/slider/<%= image %>" alt="Slide Image">
                </div>
            <% }); %>
        </div>
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>

<section class="search-index">
    <div class="container mt-4">
        <div class="card p-4">
            <div class="card-body">
                <h5 class="card-title text-left"><i class="fas fa-search"></i>Ricerca Oggetti Usati</h5>
                <form action="/search" method="get">
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="categoria"><i class="fas fa-tags"></i>Categoria</label>
                            <select class="form-control" id="categoria">
                                <option value="">Seleziona...</option>
                                <option>Libri</option>
                                <option>Elettronica</option>
                                <option>Arredamento</option>
                                <option>Abbigliamento</option>
                                <option>Attrezzature Sportive</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="prezzoMax"><i class="fas fa-euro-sign"></i>Prezzo Massimo</label>
                            <input type="number" class="form-control" id="prezzoMax"
                                   placeholder="Inserisci prezzo massimo">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="locazione"><i class="fas fa-map-marker-alt"></i>Locazione</label>
                            <input type="text" class="form-control" id="locazione" placeholder="Città, Regione">
                        </div>
                    </div>
                    <div class="form-row justify-content-center">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i>Cerca</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>

